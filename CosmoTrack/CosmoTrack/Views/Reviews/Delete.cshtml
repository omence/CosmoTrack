@model CosmoTrack.Models.Review
@{
    Layout = "_Layout";

}

<br />
<br />
<br />
<br />
<div class="container mt-2 " style="width: 45rem;">
    <div class="card-deck">

        <div class="card card text-center mr-5 mb-1 row">

            <div class="card-body text-center parent col-sm">
                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Make Public
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.MakePublic)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Rating)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Rating)
                        </dd>
                        <dt class="col-sm-2">
                            Review
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserReview)
                        </dd>
                        <dt class="col-sm-2">
                            URL
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.VideoReviewURL)
                        </dd>
                  
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>